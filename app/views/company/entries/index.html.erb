<h1>Company::Entries#index</h1>
<p>Find me in app/views/company/entries/index.html.erb</p>
<p>掲載記事一覧</p>
<table>
  <thead>
    <tr>
      <th>概要</th>
      <th>仕事の内容</th>
      <th>申し込み人数</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.title %></td>
        <td><%= entry.body %></td>
	<td><%= link_to entry.applicant.count, company_entry_applicants_path(entry) %></td>
        <td>
	  <%= link_to '詳細', company_entry_path(entry) %></td>
        <td><%= link_to 'Edit', edit_company_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', company_entry_path(entry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- 企業のみ案件の追加できる -->
<% if company_signed_in? -%>
  <%= link_to '案件登録', new_company_entry_path %>
<% end -%>
